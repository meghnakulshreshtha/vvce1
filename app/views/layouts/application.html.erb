<!DOCTYPE html>
<html>

<head>
  <title>Vvce</title>
  <%= stylesheet_link_tag :all, :scaffold, :grid, :style %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
  <style type="text/css">
* {
	margin: 0;
	padding: 0;
}

body {
	margin-top: 40px;
	background-image:url('/images/photo1.png');
		text-align: justify;
	font-family: Arial, Helvetica, sans-serif;
	font-size: 13px;
	color: #757E82;
}

h1, h2, h3 {
	color: #AA2808;
}
a:hover {
	text-decoration: none;
	color: #EF8116;
}

  </style>
</head>
<body>
	<div class="row">
		<div class="column grid_14" id="content1" >
			<div id="header" background-image="/images/rails.png">
			<h1 style="color:blue;text-align:center;" > <img src="/images/vv.png" alt="picture of rails" width=70px ; /></h1>
			</div>
		</div>
	</div>

	
	<div class="row">
		<div class="column grid_14">
			<div class="notifications">
				<p class="notice"><%= notice %></p>
			  <p class="alert"><%= alert %></p>
			</div>
		</div>	
	</div>
	
	<div class="row">
		<div class="column grid_4">
		      <br /><br /><br />
			<% if user_signed_in? %>
			<ul>
				<li><%= link_to "Home", home_user_path(current_user)%></li>
				<li><%= link_to "Profile", user_path(current_user) %></li>
				<li><%= link_to "Friends", user_friendships_path(current_user)%></li>
				<br/>
				<li><%= link_to "Edit Profile", edit_user_registration_path %></li>
				<li><%= link_to "Logout", destroy_user_session_path %></li>	
			</ul>
			<% else %>
				&nbsp;
			<% end %>	
		</div>
		<div class="column grid_10">
			<%= yield %>
		</div>	
</body>
</html>
